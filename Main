#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>
#include "View.h"
#include "Search.h"

void Add();
void Edit();
void View();
void Search();

int main()

{

int opt;

	printf("MAIN MENU\n");
	printf(" [1] Add Inventory Item\n");
	printf(" [2] Update Inventory Item\n");
	printf(" [3] View Inventory List\n");
	printf(" [4] Search Inventory Item\n");
	printf(" [5] Exit Program \n\n\n\n\n");
	printf("Please input choice: ");
	
	scanf("%d", &opt);

	switch (opt){
		case 1 :
			Add();
			break;
		case 2 :
		    Edit(); 
		    break;
		case 3 :
		    View();
			break;
		case 4 :
		    Search();
		    break;
		case 5 :
		    exit(0);
			break;
		default:
			printf("Invalid input. Try again.");
			break;
	}
	





}
